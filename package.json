{
    "name": "demo",
    "description": "A NodeJS boilerplate with templates and rest API.",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "test": "ava",
        "fmt": "npx prettier --write src",
        "fmt-test": "npx prettier --write test",
        "build": "NODE_ENV=production webpack",
        "build-image": "docker build -t node-demo .",
        "dev": "npx nodemon -e html,scss,js src/main.js",
        "start": "NODE_ENV=production node src/main.js",
        "start-with-docker": "docker run -dp 23333:3000 --name node-demo node-demo"
    },
    "dependencies": {
        "@koa/cors": "^3.1.0",
        "@koa/router": "^10.0.0",
        "big.js": "^6.1.1",
        "dayjs": "^1.10.5",
        "ioredis": "^4.27.3",
        "k-dom": "^0.3.0",
        "k-util": "^0.3.2",
        "k-xhr": "^0.3.2",
        "koa": "^2.13.1",
        "koa-body": "^4.2.0",
        "koa-helmet": "^6.1.0",
        "koa-ip": "^2.1.0",
        "koa-send": "^5.0.1",
        "koa-views": "^7.0.1",
        "lodash": "^4.17.21",
        "node-fetch": "^2.6.1"
    },
    "devDependencies": {
        "@babel/core": "^7.14.3",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/preset-env": "^7.14.2",
        "autoprefixer": "^10.2.5",
        "ava": "^3.15.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^5.2.6",
        "file-loader": "^6.2.0",
        "mini-css-extract-plugin": "^1.6.0",
        "nodemon": "^2.0.7",
        "postcss-import": "^14.0.2",
        "postcss-loader": "^5.3.0",
        "precss": "^3.1.2",
        "prettier": "^2.3.0",
        "style-loader": "^2.0.0",
        "webpack": "^5.37.1",
        "webpack-cli": "^4.7.0"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "consistent",
        "jsxSingleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "arrowParens": "always"
    },
    "ava": {
        "files": [
            "test/**/*"
        ],
        "concurrency": 4,
        "failFast": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tmspnn/demo.git"
    },
    "keywords": [
        "demo",
        "template",
        "rest",
        "API"
    ],
    "author": "tmspnn",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tmspnn/demo/issues"
    },
    "homepage": "https://github.com/tmspnn/demo#readme"
}
