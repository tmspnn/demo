{
    "name": "demo",
    "description": "A NodeJS demo with templates and rest API.",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "test": "ava",
        "fmt": "npx prettier --write ./src",
        "fmt-test": "npx prettier --write ./test",
        "build": "NODE_ENV=production webpack",
        "build-image": "docker build -t tmspnn/node-demo .",
        "start": "NODE_ENV=production node src/main.js",
        "start-with-docker": "docker run -p 23333:3000 -d --name node-demo tmspnn/node-demo"
    },
    "dependencies": {
        "@koa/cors": "^3.1.0",
        "@koa/router": "^10.0.0",
        "core-js": "^3.9.1",
        "dayjs": "^1.10.4",
        "decimal.js-light": "^2.5.1",
        "ioredis": "^4.24.4",
        "koa": "^2.13.1",
        "koa-body": "^4.2.0",
        "koa-helmet": "^6.1.0",
        "koa-ip": "^2.1.0",
        "koa-send": "^5.0.1",
        "koa-views": "^7.0.1",
        "lodash": "^4.17.21",
        "node-fetch": "^2.6.1",
        "whatwg-fetch": "^3.6.2"
    },
    "devDependencies": {
        "@babel/core": "^7.13.10",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/preset-env": "^7.13.12",
        "autoprefixer": "^10.2.5",
        "ava": "^3.15.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^5.1.3",
        "file-loader": "^6.2.0",
        "mini-css-extract-plugin": "^1.3.9",
        "postcss-color-function": "^4.1.0",
        "postcss-import": "^14.0.0",
        "precss": "^4.0.0",
        "prettier": "^2.2.1",
        "style-loader": "^2.0.0",
        "webpack": "^5.27.2",
        "webpack-cli": "^4.5.0"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "consistent",
        "jsxSingleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "arrowParens": "always"
    },
    "ava": {
        "files": ["test/**/*"],
        "concurrency": 4,
        "failFast": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tmspnn/demo.git"
    },
    "keywords": [
        "demo",
        "template",
        "rest",
        "API"
    ],
    "author": "tmspnn",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tmspnn/demo/issues"
    },
    "homepage": "https://github.com/tmspnn/demo#readme"
}
